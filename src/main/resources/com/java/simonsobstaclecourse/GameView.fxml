<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="162.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #cdeae7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.simonsobstaclecourse.controller.GameController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <Label fx:id="currentPlayer" textAlignment="CENTER" textFill="#0078c3">
      <font>
         <Font size="18.0" />
      </font>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </Label>
   <AnchorPane>
      <children>
         <TextField fx:id="p2Name" layoutX="213.0" layoutY="5.0" prefHeight="26.0" prefWidth="134.0" promptText="Player 2 name" />
         <Button fx:id="inputSubmit" layoutX="394.0" layoutY="3.0" mnemonicParsing="false" onMouseClicked="#submitInputValues" prefHeight="26.0" prefWidth="98.0" text="Submit" />
         <TextField fx:id="p1Name" layoutX="26.0" layoutY="6.0" promptText="Player 1 name" />
      </children>
   </AnchorPane>

  <!-- Spiral Grid of 25 Squares -->
  <GridPane fx:id="gameBoard" hgap="5" vgap="5">
      <padding>
         <Insets left="10.0" right="10.0" />
      </padding></GridPane>
   <AnchorPane prefHeight="18.0" prefWidth="560.0">
      <children>
         <Button fx:id="roll" layoutX="14.0" layoutY="5.0" mnemonicParsing="false" onMouseClicked="#roll" prefHeight="32.0" prefWidth="127.0" text="Roll">
            <font>
               <Font size="18.0" />
            </font>
         </Button>
         <Label fx:id="rollValue" layoutX="153.0" layoutY="9.0" prefWidth="158.0" textFill="#2c296b">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Button fx:id="move" layoutX="350.0" layoutY="5.0" mnemonicParsing="false" onMouseClicked="#move" text="Move">
            <font>
               <Font size="18.0" />
            </font>
         </Button>
         <Button fx:id="skip" layoutX="454.0" layoutY="5.0" mnemonicParsing="false" onMouseClicked="#skip" text="Skip">
            <font>
               <Font size="18.0" />
            </font>
         </Button>
      </children>
   </AnchorPane>
   <Label fx:id="message" textFill="#ff8104">
      <font>
         <Font size="18.0" />
      </font>
   </Label>

</VBox>
