<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="700.0" prefWidth="900.0" spacing="20.0" style="-fx-background-color: #cdeae7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.java.simonsobstaclecourse.controller.GameController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <Label fx:id="currentPlayer" textAlignment="CENTER" textFill="#0078c3">
      <font>
         <Font size="18.0" />
      </font>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </Label>
   <AnchorPane>
      <children>
         <TextField fx:id="p1Name" layoutX="236.0" layoutY="1.0" promptText="Player 1 name" />
         <TextField fx:id="p2Name" layoutX="430.0" prefHeight="26.0" prefWidth="134.0" promptText="Player 2 name" />
         <Button fx:id="inputSubmit" layoutX="610.0" mnemonicParsing="false" onMouseClicked="#submitInputValues" prefHeight="26.0" prefWidth="98.0" text="Submit" />
      </children>
   </AnchorPane>

  <!-- Spiral Grid of 25 Squares -->
  <GridPane fx:id="gameBoard" alignment="CENTER" hgap="5" vgap="5">
      <padding>
         <Insets left="10.0" right="10.0" />
      </padding></GridPane>
   <AnchorPane fx:id="controlPanel">
      <children>
         <Button fx:id="roll" layoutX="134.0" layoutY="-6.0" mnemonicParsing="false" onMouseClicked="#roll" prefHeight="32.0" prefWidth="127.0" text="Roll">
            <font>
               <Font size="18.0" />
            </font>
         </Button>
         <Button fx:id="move" layoutX="629.0" layoutY="-6.0" mnemonicParsing="false" onMouseClicked="#move" prefHeight="40.0" prefWidth="70.0" text="Move">
            <font>
               <Font size="18.0" />
            </font>
         </Button>
         <Button fx:id="skip" layoutX="766.0" layoutY="-6.0" mnemonicParsing="false" onMouseClicked="#skip" text="Skip">
            <font>
               <Font size="18.0" />
            </font>
         </Button>
         <Label fx:id="rollValue" layoutX="351.0" prefWidth="158.0" textFill="#2c296b">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
      </children>
   </AnchorPane>
   <Label fx:id="message" textFill="#ff8104">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <VBox fx:id="highScore" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
      <children>
         <Label text="Top 10 players" textAlignment="CENTER" textFill="#1fa410">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <ListView fx:id="topScore" prefHeight="140.0" prefWidth="860.0" />
      </children>
   </VBox>

</VBox>
